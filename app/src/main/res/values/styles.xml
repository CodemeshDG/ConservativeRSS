    <style name="Article.Summary" parent="TextAppearance.MdcTypographyStyles.Body1">
        <item name="android:textColor">@color/whiteText</item>
    </style>

    <style name="Source">

    </style>

    <style name="Source.Title" parent="TextAppearance.MdcTypographyStyles.Headline4">
        <item name="android:textColor">@color/colorSecondaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Source.Description" parent="TextAppearance.MdcTypographyStyles.Body1">
        <item name="android:textColor">@color/colorSecondaryDark</item>
        <item name="android:textStyle">italic</item>
    </style>


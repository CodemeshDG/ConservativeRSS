        <item name="android:fontFamily">@font/ibm_plex_serif_regular</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Article.Title" parent="TextAppearance.MdcTypographyStyles.Headline5">
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="Article.Byline" parent="TextAppearance.MdcTypographyStyles.Body1">
        <item name="android:textColor">@color/whiteText</item>
        <item name="fontFamily">@font/pt_sans_narrow</item>
        <item name="android:fontFamily">@font/pt_sans_narrow</item>
        <item name="android:textAlignment">textEnd</item>
    </style>
    
    <style name="Article.Date" parent="TextAppearance.MdcTypographyStyles.Body1">
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:textStyle">italic</item>
